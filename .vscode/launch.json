    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            // Debugging FC nets
            "args": ["--net", "net3", "--spec", "../examples/net3/img1_0.0065.txt"],
            // Debugging CNN nets
            // "args": ["--net", "net4", "--spec", "../examples/net4/img2_0.2290.txt"],
            // Debugging ResNets
            // "args": ["--net", "net8", "--spec", "../examples/net8/img1_0.0096.txt"],
            "cwd": "${workspaceFolder}/code"
        }
    ]
}